    <script>
        var selectedPlatform = 'Windows';

        document.addEventListener('DOMContentLoaded', function() {
            // Show signup form
            document.getElementById('showSignupLink').addEventListener('click', function() {
                document.getElementById('loginSection').classList.add('hidden');
                document.getElementById('signupSection').classList.remove('hidden');
            });

            // Show login form
            document.getElementById('showLoginLink').addEventListener('click', function() {
                document.getElementById('signupSection').classList.add('hidden');
                document.getElementById('loginSection').classList.remove('hidden');
            });

            // Validation
            var usernameValid = false;
            var emailValid = false;

            document.getElementById('signupUsername').addEventListener('input', function() {
                var val = this.value;
                usernameValid = val.length >= 4;
                
                if (val.length > 0 && val.length < 4) {
                    this.classList.add('error');
                    this.classList.remove('valid');
                    document.getElementById('usernameError').classList.add('show');
                } else if (val.length >= 4) {
                    this.classList.remove('error');
                    this.classList.add('valid');
                    document.getElementById('usernameError').classList.remove('show');
                }
                checkSignupValid();
            });

            document.getElementById('signupEmail').addEventListener('input', function() {
                var val = this.value;
                emailValid = val.includes('@');
                
                if (val.length > 0 && !val.includes('@')) {
                    this.classList.add('error');
                    this.classList.remove('valid');
                    document.getElementById('emailError').classList.add('show');
                } else if (val.includes('@')) {
                    this.classList.remove('error');
                    this.classList.add('valid');
                    document.getElementById('emailError').classList.remove('show');
                }
                checkSignupValid();
            });

            document.getElementById('signupPassword').addEventListener('input', checkSignupValid);

            function checkSignupValid() {
                var pass = document.getElementById('signupPassword').value;
                if (usernameValid && emailValid && pass.length > 0) {
                    document.getElementById('signupBtn').disabled = false;
                } else {
                    document.getElementById('signupBtn').disabled = true;
                }
            }

            // Login
            document.getElementById('loginBtn').addEventListener('click', function() {
                var email = document.getElementById('loginEmail').value;
                var pass = document.getElementById('loginPassword').value;
                if (email && pass) {
                    document.getElementById('loginSection').classList.add('hidden');
                    document.getElementById('contentSection').classList.remove('hidden');
                    alert('Login successful! Welcome to F1: Apex');
                }
            });

            // Signup
            document.getElementById('signupBtn').addEventListener('click', function() {
                document.getElementById('signupSection').classList.add('hidden');
                document.getElementById('contentSection').classList.remove('hidden');
                alert('Account created! Welcome to F1: Apex');
            });

            // Tabs
            var tabBtns = document.querySelectorAll('.tab-btn');
            tabBtns.forEach(function(btn) {
                btn.addEventListener('click', function() {
                    var tab = this.getAttribute('data-tab');
                    
                    document.querySelectorAll('.tab-btn').forEach(function(b) {
                        b.classList.remove('active');
                    });
                    document.querySelectorAll('.tab-content').forEach(function(c) {
                        c.classList.remove('active');
                    });
                    
                    this.classList.add('active');
                    document.getElementById(tab + '-tab').classList.add('active');
                });
            });

            // Platform selection
            var platforms = document.querySelectorAll('.feature-highlight[data-platform]');
            platforms.forEach(function(plat) {
                plat.addEventListener('click', function() {
                    platforms.forEach(function(p) {
                        p.style.borderColor = 'rgba(229, 9, 20, 0.4)';
                    });
                    this.style.borderColor = '#e50914';
                    
                    var p = this.getAttribute('data-platform');
                    selectedPlatform = p.charAt(0).toUpperCase() + p.slice(1);
                    document.getElementById('downloadBtn').textContent = 'Download for ' + selectedPlatform;
                });
            });

            // Download
            document.getElementById('downloadBtn').addEventListener('click', function() {
                var files = {
                    Windows: 'F1_Apex_v2.5.0_Win64.exe',
                    Mac: 'F1_Apex_v2.5.0_macOS.dmg',
                    Linux: 'F1_Apex_v2.5.0_Linux.AppImage'
                };
                
                this.textContent = 'Preparing Download...';
                this.style.background = 'linear-gradient(135deg, #28a745 0%, #20c997 100%)';
                
                var btn = this;
                setTimeout(function() {
                    alert('Starting download: ' + files[selectedPlatform]);
                    btn.textContent = 'Download for ' + selectedPlatform;
                    btn.style.background = 'linear-gradient(135deg, #e50914 0%, #ff0a16 100%)';
                }, 1500);
            });
        });
    </script>
</body>
